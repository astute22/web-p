<script type="text/javascript">
	(function() {
		var links = document.getElementsByTagName("a");
		var linkArray = [];
		for(var i=0; i<links.length; index++){
			linkArray.push(links.item(i));
		}
		linkArray.forEach(function(item, index) {
			item.addEventListener("click",function(event){
				event.preventDefault();
				var imgpath = item.getAttribute('href');
				document.getElementById("photo-gallary").setAttribute("src",imgpath);
			})
		})
	});
</script>
