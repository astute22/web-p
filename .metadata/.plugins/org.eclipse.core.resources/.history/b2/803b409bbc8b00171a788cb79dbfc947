<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
	.gallery-item{
		display: inline-block;
		margin: 15px;
	}
</style>
</head>
<body>
	<div id="gallery-box"></div>
</body>
<script type="text/javascript">
	//자바스크립트 객체
	var posters = [
		{image:"a.jpg",title:"킬러의 보디가드", point:9.5, rate:27.5},
		{image:"b.jpg",title:"발레리안 : 천개행성의 도시", point:8.4, rate:22.5},
		{image:"c.jpg",title:"아토믹블랜드", point:9.0, rate:20.2},
		{image:"d.jpg",title:"그것", point:7.5, rate:7.5},
		{image:"e.jpg",title:"리얼", point:4.4, rate:7.4}];
	
	var gallery = document.getElementById("gallery-box");
	var htmlContent = "";
	posters.forEach(function(poster, index){
		htmlContent += "<div class='gallery-item'>"
		htmlContent += '<img src="../image/'+poster.image+'" alt="'+poster.title+'"/>';
		htmlContent += "<h3>"+poster.title+"</h3>";
		htmlContent += "<p>평점 : "+poster.point+" 예매율 : <small>"+poster.rate+"</small></p>";
		htmlContent += "</div>";
	});
	gallery.innerHTML = htmlContent;
</script>
</html>