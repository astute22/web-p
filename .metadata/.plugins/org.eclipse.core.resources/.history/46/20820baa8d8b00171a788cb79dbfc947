<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	function fn(el) {
		/*
			html element(태그를 표현하는 객체) 중에서 <input type="radio">, <input type="checkbox">는 checked property를 가지고있다.
			checked property는 체크 되어있으면 true, 체크를 해제하면 false값을 갖는다.
		*/
		var divBox = document.querySelector("#wedding-box");
		if(el.value == 'Y'){
			divBox.style.display = 'block';	
		} else{
			divBox.style.display = 'none';
		}
	}
	function fn2(el) {
		//1. commpany-box 엘리먼트 찾기
		var combobox = document.querySelector("#company-combobox");
		//2. email-field 엘리먼트 찾기
		var field = document.getElementById("email2-field");
		
		//3. company-box 엘리먼트에서 현재 선택된 값 알아내기
		var currentCompany = combobox.value;
//		console.log(currentCompany);
		
		//4. email2-field 값 변경
		field.value = currentCompany;
	}
</script>
</head>
<body>
	<form>
	<div>
