<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
	a{
		display: inline-black;
		width: 150px;
		padding: 10px;
		border: 1px solid black;
		text-decoration: none;
	}
</style>
</head>
<body>
	<div>
		<a href="../image/a.jpg">킬러의 보디가드</a>
		<a href="../image/b.jpg">발레리안 : 천개행성의 도시</a>
		<a href="../image/c.jpg">아토믹 블론드</a>
		<a href="../image/d.jpg">그-것</a>
		<a href="../image/e.jpg">뤼얼</a>
	</div>
	<div>
		<img alt="킬러의 보디가드 영화포스터" src="../image/a.jpg" id="photo-gallary">
	</div>
</body>
<script type="text/javascript">
	(function() {
		//모든 a 엘리먼트를 불러옴
		var links = document.getElementsByTagName("a");
		var linkArray = [];
		//links에 담긴 a 엘리먼트를 linkArray 배열에 옮김
		for(var i=0; i<links.length; i++){
			linkArray.push(links.item(i));
		}
		
		//linkArray에 들어있는 요소의 갯수만큼 함수 실행
		//item에는 a 엘리먼트가 순서대로 전달됨
		linkArray.forEach(function(item, index) {
			//item에 들어있는 a 엘리먼트에 이벤트 핸들러 함수를 등록
			item.addEventListener("click",function(event){
				//a 태그를 클랙했을 때 페이지가 이동되는 기본동작이 일어나지 않도록 방해함.
				event.preventDefault();
				//item에 들어있는 a 엘리먼트의 href 속성값을 읽어옴
				var imagepath = item.getAttribute('href');
				//id가 photo-gallary인 img 엘리먼트의 src 속성값을 변경 
				document.getElementById("photo-gallary").setAttribute("src",imagepath);
			})
		})
	});
</script>
</html>