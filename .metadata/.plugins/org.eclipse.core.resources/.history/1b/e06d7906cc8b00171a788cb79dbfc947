<script type="text/javascript">
	// label를 클릭하면 해당 토픽만 화면에 표시되게 하기
	function hideAllTopics(){
		var topics = document.getElementsByClassName("topics");
		for(var i=0; i<topics.length; i++){
			topics[i].style.display = 'none';
		}
	}
	var labels = document.getElementByTagName("label");
	for(var i = 0; i<labels.length; i++){
		labels[i].addEventListener('click',function(event){
			hideAllTopics();
			document.getElementById("n-"+event.target.id).style.display = 'block';
		}
	}
	/*
