<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<div id="gallery-box"></div>
</body>
<script type="text/javascript">
	//자바스크립트 객체
	var posters = [
		{image:"a.jpg",title:"킬러의 보디가드", point:6.0, rate:27.5},
		{image:"b.jpg",title:"발레리안 : 천개행성의 도시", point:9.3, rate:27.5},
		{image:"c.jpg",title:"아토믹블랜드", point:7.4, rate:27.5},
		{image:"d.jpg",title:"그것", point:7.5, rate:27.5},
		{image:"e.jpg",title:"리얼", point:7.2, rate:27.5}];
	
	var gallerybox = document.getElementById("gallery-box");
	var htmlContent = "";
	posters.forEach(function(poster, index){
		htmlContent += '<img src="../image/'+poster.image+'" alt="'+poster.title+'"/>';
	})
	gallerybox	.innerHTML = htmlContent;
</script>
</html>